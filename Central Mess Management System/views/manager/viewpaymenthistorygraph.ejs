                                    <div class="form-floating mb-5">
                                        <input type="number" class="form-control" id="duration" name="month" placeholder="something"
                                            min="1" max="60"  required>
                                        <label for="duraion">duration (months)</label>
                                    </div>
                                </div>
                                <div class="col-1">
